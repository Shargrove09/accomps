// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id              String           @id @default(cuid())
  name            String           @unique
  description     String?
  color           String? // Hex color for UI
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  accomplishments Accomplishment[]
}

model Tag {
  id              String              @id @default(cuid())
  name            String              @unique
  description     String?
  color           String? // Hex color for UI
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  accomplishments AccomplishmentTag[]
}

model Accomplishment {
  id          String              @id @default(cuid())
  title       String
  description String?
  date        DateTime
  categoryId  String
  category    Category            @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  tags        AccomplishmentTag[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model AccomplishmentTag {
  id               String         @id @default(cuid())
  accomplishmentId String
  tagId            String
  accomplishment   Accomplishment @relation(fields: [accomplishmentId], references: [id], onDelete: Cascade)
  tag              Tag            @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([accomplishmentId, tagId])
}

enum PendingStatus {
  QUEUED
  APPROVED
  REJECTED
}

model PendingAccomplishment {
  id            String         @id @default(cuid())
  title         String?
  description   String?
  category      String?
  tags          String[]       @default([])
  rawInput      String
  source        String?
  confidence    Float          @default(0)
  status        PendingStatus  @default(QUEUED)
  reasoning     String?
  errorMessage  String?
  reviewerNotes String?
  processedBy   String?
  approvedAt    DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}
